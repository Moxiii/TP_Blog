{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Articles</h1>
    {% if is_granted('ROLE_REDACTEUR') %}
    <a href="{{ path('nouvel_article') }}">Ajouter un nouvel article </a>
    {% endif %}
    <ul>
        {% for article in articles %}
            <li>{{ article.Titre }} par {{ article.Auteur }} : {{ article.Text }} </br> <a href="{{ path('comment_add', {'id': article.id}) }}">Voir/ajouter un commentaire</a></li>


        {% endfor %}
    </ul>
</div>
{% endblock %}
